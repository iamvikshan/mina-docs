---
import { Icon } from 'astro-icon/components';

interface Props {
  icon?: string; // Now accepts any valid icon name from astro-icon
  title: string;
}

const { icon, title } = Astro.props;
---

<article class="card sl-flex">
  <p class="title sl-flex">
    {icon && <Icon name={icon} class="icon" width="1.333em" height="1.333em" />}
    <span set:html={title} />
  </p>
  <div class="body"><slot /></div>
</article>

<style>
  .card {
    --sl-card-border: var(--amina-crimson);
    --sl-card-bg: rgba(220, 20, 60, 0.1);
    border: 1px solid var(--sl-card-border);
    background-color: var(--midnight-black);
    padding: clamp(1rem, calc(0.125rem + 3vw), 2.5rem);
    flex-direction: column;
    gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
    border-radius: var(--radius-lg);
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    box-shadow: var(--shadow-md);
  }

  /* Category-specific colors matching Amina's command categories */
  .card:nth-child(4n + 1) {
    --sl-card-border: var(--economy-gold);
    --sl-card-bg: rgba(255, 215, 0, 0.1);
  }
  .card:nth-child(4n + 2) {
    --sl-card-border: var(--electric-blue);
    --sl-card-bg: rgba(30, 144, 255, 0.1);
  }
  .card:nth-child(4n + 3) {
    --sl-card-border: var(--discord-green);
    --sl-card-bg: rgba(87, 242, 135, 0.1);
  }
  .card:nth-child(4n + 4) {
    --sl-card-border: var(--amina-crimson);
    --sl-card-bg: rgba(220, 20, 60, 0.1);
  }

  .card:hover {
    box-shadow:
      0 0 30px var(--sl-card-bg),
      var(--shadow-lg);
    border-color: var(--sl-card-border);
  }

  .title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: var(--sl-text-h4);
    color: var(--sl-color-white);
    line-height: var(--sl-line-height-headings);
    gap: 1rem;
    align-items: center;
    letter-spacing: 0.02em;
  }

  .card .icon {
    border: 1px solid var(--sl-card-border);
    background-color: var(--sl-card-bg);
    padding: 0.4em;
    border-radius: var(--radius-md);
    transition:
      background-color 0.2s ease,
      box-shadow 0.2s ease;
    color: var(--sl-card-border);
  }

  .card:hover .icon {
    background-color: var(--sl-card-bg);
    color: var(--sl-card-border);
    box-shadow: 0 0 15px var(--sl-card-border);
  }

  .card .body {
    margin: 0;
    font-family: var(--font-body);
    font-size: clamp(
      var(--sl-text-sm),
      calc(0.5rem + 1vw),
      var(--sl-text-body)
    );
    color: var(--sl-color-gray-2);
    line-height: 1.7;
  }
</style>
