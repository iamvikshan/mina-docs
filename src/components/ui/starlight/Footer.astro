---
/**
 * Custom Footer that includes SupportBanner before pagination
 * Overrides Starlight's default Footer component
 */
import EditLink from '@astrojs/starlight/components/EditLink.astro';
import LastUpdated from '@astrojs/starlight/components/LastUpdated.astro';
import Pagination from './Pagination.astro';
import SupportBanner from './SupportBanner.astro';
---

<footer class="sl-flex">
  <SupportBanner />

  <div class="meta sl-flex">
    <EditLink />
    <LastUpdated />
  </div>
  <Pagination />
</footer>

<style>
  @layer starlight.core {
    footer {
      flex-direction: column;
      gap: 1.5rem;
    }
    .meta {
      gap: 0.75rem 3rem;
      justify-content: space-between;
      flex-wrap: wrap;
      font-size: var(--sl-text-sm);
      color: var(--sl-color-gray-3);
    }
    .meta > :global(p:only-child) {
      margin-inline-start: auto;
    }
  }
</style>
