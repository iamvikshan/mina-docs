---
/**
 * 404 Button - Mirrored Primary Button
 * =====================================
 * Lateral mirror of PrimaryBtn with reversed gradient
 * Used for back navigation on error pages
 * Perfect for: History back, return to previous page
 */

import Icon from '@components/ui/icons/Icon.astro';

interface Props {
  text?: string;
  icon?: 'arrow-left' | 'arrow-right' | 'shield' | 'star' | 'ghost';
  class?: string;
  onclick?: string;
}

const {
  text = 'Go Back',
  icon = 'arrow-left',
  class: className = '',
  onclick = 'history.back()',
} = Astro.props;
---

<button
  onclick={onclick}
  class:list={[
    'group inline-flex items-center gap-2 px-8 py-4',
    'bg-gradient-to-l from-amina-crimson to-rose-red text-white',
    'rounded-xl font-heading font-bold text-lg',
    'hover:scale-105 hover:shadow-glow-red',
    'transition-all duration-300',
    className,
  ]}
>
  <Icon
    name="arrow-left"
    class="transition-transform duration-300 group-hover:-translate-x-1"
    size={20}
  />
  <span>{text}</span>
  <Icon name={icon} size={24} />
</button>
