---
// @/components/ui/buttons/DashboardBtn.astro
interface Props {
  title?: string;
}

const { title = 'Dashboard' } = Astro.props;

const baseClasses =
  'flex items-center gap-x-2 text-base md:text-sm font-medium text-neutral-600 ring-zinc-500 transition duration-300 focus-visible:ring outline-none';
const hoverClasses =
  'hover:text-fuchsia-400 hover:scale-105 dark:hover:text-fuchsia-300';
const darkClasses =
  'dark:border-neutral-700 dark:text-neutral-100 dark:ring-zinc-200 dark:focus:outline-none';
const mdClasses = 'md:my-6 md:border-s md:border-neutral-300 md:ps-6';
const txtSizeClasses = '2xl:text-base';

// Dashboard icon SVG
const dashboardSVG = `<svg
    class="h-5 w-5 flex-shrink-0"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="currentColor">
    <path d="M4 13h6a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1zm-1 7a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-4a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v4zm10 0a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-7a1 1 0 0 0-1-1h-6a1 1 0 0 0-1 1v7zm1-10h6a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1h-6a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1z"/>
</svg>`;
---

<a
  href="https://dash.vikshan.tech"
  class={`${baseClasses} ${hoverClasses} ${darkClasses} ${mdClasses} ${txtSizeClasses} bg-fuchsia-500 text-white px-4 py-2 rounded-lg transform transition-all duration-200`}
>
  <Fragment set:html={dashboardSVG} />
  {title}
</a>

<style>
  a:hover {
    box-shadow: 0 0 15px rgba(249, 115, 22, 0.5);
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }

  a:active {
    transform: scale(0.95);
  }
</style>
