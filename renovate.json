{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    "schedule:daily",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "timezone": "UTC",
  "minimumReleaseAge": "3 days",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"],
    "automerge": true,
    "labels": ["dependencies", "lockfile"]
  },
  "packageRules": [
    {
      "description": "Astro ecosystem packages",
      "matchPackagePatterns": ["^@astrojs/", "^astro"],
      "groupName": "astro",
      "labels": ["dependencies", "astro"]
    },
    {
      "description": "React packages",
      "matchPackageNames": ["react", "react-dom"],
      "groupName": "react",
      "labels": ["dependencies", "react"]
    },
    {
      "description": "Tailwind CSS packages",
      "matchPackagePatterns": ["^tailwindcss$", "^@tailwindcss/"],
      "groupName": "tailwindcss",
      "labels": ["dependencies", "tailwind"]
    },
    {
      "description": "Preline UI components",
      "matchPackagePatterns": ["^@preline/", "^preline$"],
      "groupName": "preline",
      "labels": ["dependencies", "preline"]
    },
    {
      "description": "Image processing (sharp)",
      "matchPackagePatterns": ["^sharp"],
      "groupName": "sharp",
      "labels": ["dependencies", "images"]
    },
    {
      "description": "TypeScript and type definitions",
      "matchPackagePatterns": ["^@types/", "^typescript$"],
      "groupName": "typescript",
      "labels": ["dependencies", "typescript"]
    },
    {
      "description": "Prettier and formatting",
      "matchPackagePatterns": ["^prettier"],
      "groupName": "prettier",
      "labels": ["dependencies", "formatting"]
    },
    {
      "description": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "labels": ["actions", "dependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "description": "Auto-merge patch updates for production deps",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Auto-merge minor and patch updates for dev deps",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Major version updates require manual review",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "osvVulnerabilityAlerts": true
}
